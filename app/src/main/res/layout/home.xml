<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondohome"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/userName"
        android:layout_marginBottom="95dp"
        android:layout_alignBottom="@+id/btn_VerRecetas"
        android:layout_toLeftOf="@+id/btn_VerRecetas"
        android:layout_toStartOf="@+id/btn_VerRecetas" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Mis Recetas"
        android:layout_marginTop="173dp"
        android:id="@+id/btn_VerRecetas"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar Recetas"
        android:id="@+id/btn_BuscarReceta"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/btn_VerRecetas"
        android:layout_alignLeft="@+id/btn_VerRecetas"
        android:layout_alignStart="@+id/btn_VerRecetas"
        android:layout_alignRight="@+id/btn_VerDespensa"
        android:layout_alignEnd="@+id/btn_VerDespensa" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Mi Despensa"
        android:id="@+id/btn_VerDespensa"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/btn_BuscarReceta"
        android:layout_alignLeft="@+id/btn_VerRecetas"
        android:layout_alignStart="@+id/btn_VerRecetas" />

</RelativeLayout>